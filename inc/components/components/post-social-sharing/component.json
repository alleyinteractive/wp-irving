{
  "name": "irving/post-social-sharing",
  "_alias": "irving/social-sharing",
  "description": "Displays a list of platforms to share content on.",
  "config": {
    "description": {
      "default": "",
      "type": "string"
    },
    "image_url": {
      "default": "",
      "type": "string"
    },
    "platforms": {
      "default": [
        "email",
        "facebook",
        "linkedin",
        "pinterest",
        "reddit",
        "twitter",
        "whatsapp"
      ],
      "type": "array"
    },
    "platform_data": {
      "default": [],
      "type": "array"
    },
    "post_id": {
      "default": 0,
      "type": "int"
    },
    "title": {
      "default": "",
      "type": "string"
    },
    "url": {
      "default": "",
      "type": "string"
    },
    "gtm_category": {
      "default": "Engagement",
      "type": "string"
    },
    "gtm_action": {
      "default": "Share",
      "type": "string"
    }
  },
  "use_context": {
    "irving/post_id": "post_id"
  }
}
